@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading"><h2>SignUp</h2></div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="email" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox"> Remember me
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success">Sign in</button>
                                <a class="btn btn-success" href="@Url.Action("SignIn", new { type = "Google" })"><i class="fa fa-google"></i>&nbsp;&nbsp;Login using Google</a>
                                <a class="btn btn-success" href="@Url.Action("SignIn", new { type = "Microsoft" })"><i class="fa fa-google"></i>&nbsp;&nbsp;Login using Microsoft</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>